            <attribute name="t-att-Rfc">record.auto_invoice_vat or customer_rfc</attribute>
            <attribute name="t-att-Nombre">'***' if record.auto_invoice_vat else format_string(customer.commercial_partner_id.name, 254)</attribute>
        </xpath>
    </template>
</odoo>
